<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drivers</title>
</head>
<body>
    <table>
        <tr>
            <th>Driver ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% drivers.forEach(driver => { %>
            <tr>
                <td><%=driver.driver_id%></td>
                <td><%=driver.first_name%></td>
                <td><%=driver.last_name%></td>
                <td><%=driver.email%></td>
                <td>
                    <form action='/drivers' method='post'>
                        <input type='submit' value='edit' name='edit'>
                        <input type='hidden' name='selected' value='<%=driver.driver_id%>'>
                        <input type='hidden' name='action' id='action' value='edit'>
                    </form>
                </td>
            </tr>
        <% }) %>
        
    </table>

    <div>
        <h2>Edit Item</h2>
        <form action="/drivers" method="post">
            <table>
                <tr>
                    <td>Driver ID</td>
                    <td><%= driver_id %></td>
                </tr>
                <tr>
                    <td>E-mail</td>
                    <td><input type="email" name="edit_email" id="edit_email"></td>
                </tr>
                <tr>
                    <td>First Name</td>
                    <td><input type="text" name="edit_f_name" id="edit_f_name"></td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td><input type="text" name="edit_l_name" id="edit_l_name"></td>
                </tr>

            </table>
        </form>
    </div>

    <div>
        
    </div>
    


</body>
</html>