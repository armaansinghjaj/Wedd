<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>admins</title>
</head>
<body>
    <table>
        <tr>
            <th>Admin ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% admins.forEach(admin => { %>
            <tr>
                <td><%=admin.admin_id%></td>
                <td><%=admin.first_name%></td>
                <td><%=admin.last_name%></td>
                <td><%=admin.email%></td>
                <td>
                    <form action='/admins' method='post'>
                        <input type='submit' value='edit' name='edit'>
                        <input type='hidden' name='selected' value='<%=admin.admin_id%>'>
                        <input type='hidden' name='action'  value='edit'>
                    </form>
                </td>
                <td>
                    <form action='/admins' method='post'>
                        <input type='submit' value='delete' name='delete'>
                        <input type='hidden' name='selected' value='<%=admin.admin_id%>'>
                        <input type='hidden' name='action'  value='delete'>
                    </form>
                </td>
            </tr>
        <% }) %>
        
    </table>

    <div>
        <h2>Edit admin</h2>
        <form action="/admins" method="post">
            <table>
                <tr>
                    <td>admin ID</td>
                    <td><input type="number" name="edit_admin_id" id="edit_admin_id" readonly></td>
                </tr>
                <tr>
                    <td>E-mail</td>
                    <td><input type="email" name="edit_email" id="edit_email"></td>
                </tr>
                <tr>
                    <td>First Name</td>
                    <td><input type="text" name="edit_f_name" id="edit_f_name"></td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td><input type="text" name="edit_l_name" id="edit_l_name"></td>
                </tr>
            </table>
            <input type="submit" value="Edit">
            <input type="hidden" name="action" value="update">
            
        </form>
    </div>

    <div>
        <h2>Add admin</h2>
        <form action="/admins" method="post">
            <table>
                <tr>
                    <td>E-mail</td>
                    <td><input type="email" name="new_email" id="new_email"></td>
                </tr>
                <tr>
                    <td>First Name</td>
                    <td><input type="text" name="new_f_name" id="new_f_name"></td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td><input type="text" name="new_l_name" id="new_l_name"></td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td><input type="password" name="new_password" id="new_password"></td>
                </tr>
            </table>
            <input type="submit" value="Add">
            <input type="hidden" name="action" value="add">
        </form>
    </div>
    


</body>
</html>